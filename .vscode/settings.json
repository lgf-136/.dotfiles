  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "args": [
        "-Nologo"
      ],
      "icon": "terminal-powershell"
    },
    "pwsh": {
      "source": "pwsh",
      "args": [
        "-Nologo"
      ],
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": "${env:windir}\\System32\\cmd.exe",
      "args": [
        "/K"
      ],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "path": "${env:windir}\\Program Files\\Git\\bin\\bash.exe",
      "source": "Git Bash",
      "args": [],
      "icon": "terminal-bash"
    },
    "msys2": {
      "path": "D:\\msys64\\usr\\bin\\zsh.exe",
      "args": [],
      "icon": "terminal-bash"
    }
  },
  // "terminal.integrated.defaultProfile.windows": "Git Bash",
  // "terminal.integrated.automationShell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "terminal.integrated.defaultProfile.windows": "msys2",
  "terminal.integrated.automationShell.windows": "D:\\msys64\\usr\\bin\\zsh.exe",
  "vsicons.dontShowNewVersionMessage": true,
  "explorer.compactFolders": false
}