[init]
	defaultBranch = main
[safe]
    directory = /home/linuxbrew/.linuxbrew/Homebrew/Library/Taps/homebrew/homebrew-core
	directory = /home/lgf/code
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[http]
	sslverify = false
[user]
    name = lgf
    email = lgf_136@163.com
[core]
	autocrlf = false
	quotepath = false

[alias]
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	co = checkout
	cob = checkout -b
	coo = !git fetch && git checkout
	br = branch
	brd = branch -d
	st = status
	aa = add -A .
	unstage = reset --soft HEAD^
	cm = commit -m
	amend = commit --amend -m
	fix = commit --fixup
	undo = reset HEAD~1
	rv = revert
	cp = cherry-pick
	pu = !git push origin `git branch --show-current`
	fush = push -f
	mg = merge --no-ff
	rb = rebase
	rbc = rebase --continue
	rba = rebase --abort
	rbs = rebase --skip
	rom = !git fetch && git rebase -i origin/master --autosquash
	save = stash push
	pop = stash pop
	apply = stash apply
	rl = reflog

	# Emoji-Log：编写 Git 提交信息的新方法: https://cubox.pro/my/card?id=ff8080818381afe80183baad56c02b2b
	# Git Commit, Add all and Push — in one step.
	cap = "!f() { git add .; git commit -m \"$@\"; git push; }; f"
	# FEAT.
	feat = "!f() { git cap \"✏️ feat: $@\"; }; f"
	# IMPROVE.
	imp = "!f() { git cap \"📈 improve: $@\"; }; f"
	# FIX.
	fix = "!f() { git cap \"🔧 fix: $@\"; }; f"
	# RELEASE.
	rls = "!f() { git cap \"🚀 release: $@\"; }; f"
	# DOC.
	doc = "!f() { git cap \"📑 doc: $@\"; }; f"
	# TEST.
	test = "!f() { git cap \"✅ test: $@\"; }; f"
	# CHORE.
	chore = "!f() { git cap \"📌 chore: $@\"; }; f"